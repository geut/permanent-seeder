#!/usr/bin/env node

const { SDK } = require('@geut/permanent-services')

;(async () => {
  const config = JSON.parse(process.argv[2])
  const repl = process.argv.length === 4 && process.argv[3] === 'repl'

  const sdk = new SDK(config)

  await sdk.start()

  if (repl) {
    sdk.repl().pipe(process.stdout)
  }
})()
